<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Clock-In Visualization' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <%- typeof extraStyles !== 'undefined' ? extraStyles : '' %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Clock-In Visualization</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tx-count">Transaction Analysis</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/market-share">Market Share</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mt-4">
    <%- body %>
  </main>

  <footer class="bg-dark text-light py-3 mt-5">
    <div class="container text-center">
      <p>&copy; 2025 Clock-In Visualization</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <% if (typeof title !== 'undefined' && title === 'Transaction Count Visualization') { %>
    <script src="/js/tx-count.js"></script>
  <% } else if (typeof title !== 'undefined' && title === 'Clock-In Market Share Visualization') { %>
    <script src="/js/market-share.js"></script>
  <% } else { %>
    <script src="/js/main.js"></script>
  <% } %>
  <%- typeof extraScripts !== 'undefined' ? extraScripts : '' %>
</body>
</html>
