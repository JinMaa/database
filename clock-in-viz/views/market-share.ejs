<div class="container mt-4">
  <h1 class="mb-4">Clock-In Market Share by Block</h1>
  
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <div id="loading" class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading data...</p>
          </div>
          <div id="visualization-container" style="display: none;">
            <div id="block-visualization"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0">Clock-In Only Distribution</h5>
        </div>
        <div class="card-body">
          <div id="clock-in-visualization"></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0">OYL vs Ordiscan Distribution</h5>
        </div>
        <div class="card-body">
          <div id="oyl-ordiscan-visualization"></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0">Market Share Data Table</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="data-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Block Height</th>
                  <th>Total Tx</th>
                  <th>Total Clock-Ins</th>
                  <th>Clock-In %</th>
                  <th>OYL Count</th>
                  <th>OYL %</th>
                  <th>Ordiscan Count</th>
                  <th>Ordiscan %</th>
                  <th>Other Clock-In Count</th>
                  <th>Other Clock-In %</th>
                  <th>Non Clock-In Count</th>
                  <th>Non Clock-In %</th>
                </tr>
              </thead>
              <tbody>
                <!-- Data will be inserted here by JavaScript -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://d3js.org/d3.v7.min.js"></script>
<script src="/js/market-share.js"></script>
