<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2>Block Clock-In Visualization</h2>
      </div>
      <div class="card-body">
        <p class="lead"><%= description %></p>
        <div id="loading" class="text-center">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p>Loading visualization data...</p>
        </div>
        <div id="visualization-container" class="mt-4" style="display: none;">
          <div id="block-visualization" class="mb-5"></div>
          <h3 class="mt-4">Clock-In Data</h3>
          <div class="table-responsive">
            <table id="data-table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Block Height</th>
                  <th>Transaction ID</th>
                  <th>Address</th>
                  <th>Clock-In Count</th>
                  <th>Block Max Clock-In</th>
                  <th>Global Max Clock-In</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
